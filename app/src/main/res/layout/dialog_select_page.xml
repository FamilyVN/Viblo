<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_10"
    android:layout_marginLeft="@dimen/size_20"
    android:layout_marginRight="@dimen/size_20"
    android:layout_marginTop="@dimen/size_20"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_20"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"/>

    <include layout="@layout/layout_linear_break"/>

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:textColor="@color/color155"
        android:textSize="@dimen/text_size_14"/>

    <EditText
        android:id="@+id/editPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5"
        android:imeOptions="actionGo"
        android:inputType="number"
        android:maxLength="8"
        android:minWidth="@dimen/size_100"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_30"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_36"
            android:background="@drawable/selector_button_grey"
            android:text="@string/text_dialog_cancel"
            android:textAllCaps="false"
            android:textColor="@color/selector_text_gray_white"
            android:textSize="@dimen/text_size_14"/>

        <Button
            android:id="@+id/btnOK"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_36"
            android:layout_marginLeft="@dimen/size_70"
            android:background="@drawable/selector_button_blue_white"
            android:text="@string/text_dialog_ok"
            android:textAllCaps="false"
            android:textColor="@color/selector_text_white_blue"
            android:textSize="@dimen/text_size_14"/>
    </LinearLayout>
</LinearLayout>
