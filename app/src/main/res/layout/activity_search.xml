<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.asia.viblo.view.activity.search.SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_10"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_edit_search"
            android:hint="Search Viblo"
            android:paddingLeft="@dimen/size_10"
            android:paddingRight="@dimen/size_10"
            android:textSize="@dimen/text_size_14"/>

        <ImageView
            android:layout_width="@dimen/size_90"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_10"
            android:background="@drawable/bg_buttom_search"
            android:padding="@dimen/size_5"
            android:src="@drawable/ic_search"/>
    </LinearLayout>
</LinearLayout>
