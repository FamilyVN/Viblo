<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_5"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/views"
        style="@style/TextPost"
        android:drawableLeft="@drawable/ic_views"
        cardView:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/clips"
        style="@style/TextPost"
        android:layout_marginLeft="@dimen/size_10"
        android:drawableLeft="@drawable/ic_clips"
        cardView:layout_constraintLeft_toRightOf="@+id/views"/>

    <TextView
        android:id="@+id/comments"
        style="@style/TextPost"
        android:layout_marginLeft="@dimen/size_10"
        android:drawableLeft="@drawable/ic_comments"
        cardView:layout_constraintLeft_toRightOf="@+id/clips"/>

    <TextView
        android:id="@+id/score"
        style="@style/TextPost"
        android:layout_marginRight="@dimen/size_5"
        android:drawableLeft="@drawable/ic_score"
        cardView:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>